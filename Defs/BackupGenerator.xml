<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

  <ThingDef ParentName="BuildingBase">
    <defName>BackupGeneratorWood</defName>
    <label>backup generator (wood)</label>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/Power/BackupGeneratorWood</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,2)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>150</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>1.0</fillPercent>
    <castEdgeShadows>false</castEdgeShadows>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <placeWorkers>
      <li>PlaceWorker_Heater</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>1</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <description>Emergency power kicks in when battery reserves fall below a set minimum (currently: 200 Wd). Generator kicks off when reserves exceed a set maximum (1000 Wd). Consumes little fuel when idle.</description>
    <size>(1,2)</size>
    <building>
      <ignoreNeedsPower>true</ignoreNeedsPower>
    </building>
    <costList>
      <Steel>150</Steel>
      <Component>6</Component>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>DLTD.CompBackupPower</compClass>
        <basePowerConsumption>-1200</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="DLTD.CompProperties_RefuelableDualConsumption">
        <fuelLowConsumptionRate>2.0</fuelLowConsumptionRate>
        <fuelHighConsumptionRate>15.0</fuelHighConsumptionRate>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>2.0</fuelConsumptionRate>
        <fuelCapacity>75.0</fuelCapacity>
        <consumeFuelOnlyWhenUsed>false</consumeFuelOnlyWhenUsed>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </fuelFilter>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(217,42,33,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>4</heatPerSecond>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Power</designationCategory>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <designationHotkey>Misc3</designationHotkey>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites>
      <li>MultiAnalyzer</li>
    </researchPrerequisites>
  </ThingDef>

